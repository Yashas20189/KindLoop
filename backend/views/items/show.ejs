<% layout("/layouts/boilerplate.ejs") %>

<body>
  <div class="row mt-3">
    <div class="col-8 offset-3">  
      <h3><%= item.title %></h3>
    </div>

    <div class="card col-6 offset-3 show-card listing-card">
      <img src="<%= item.image.url %>" class="card-img-top show-img" alt="item_img"><br>
      <div class="card-body">
        <p class="card-text"><strong>Description:</strong> <%= item.description %></p>
        <p class="card-text"><strong>Type:</strong> <%= item.type %></p>
        <p class="card-text"><strong>Location:</strong> <%= item.location %></p>
        <p class="card-text"><strong>Country:</strong> <%= item.country %></p>
      </div>
    </div>

    <!-- Edit/Delete Buttons (Optional: Add login logic later) -->
    <div class="btns">
      <a 
        href="/items/<%= item._id %>/edit"
        class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>

      <form method="POST" action="/items/<%= item._id %>?_method=DELETE">
        <button class="btn btn-dark offset-5">Delete</button>
      </form>
    </div>
</body>
